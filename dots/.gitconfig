[include]
    path = .gitconfig.local
[color]
    ui = auto
[core]
    excludesfile = /Users/takaya-deguchi/.gitignore
    editor = vim
[merge]
    ff = false
[pull]
    rebase = true
[alias]
    co = checkout
    cm = commit
    st = status
    br = branch
    sh = stash
    lg = log --pretty=format:'%h -%an ,%ad> %s' --graph --decorate --branches --date=iso --abbrev-commit 
    lgs = log --graph --decorate --pretty=format:\"%ad [%cn] %h> %n %Cgreen%d%Creset %s %n\" --name-status
    pr = !hub browse $(git config remote.origin.url | sed -e 's/git@github.com://' -e 's/.git//') pull/$(git rev-parse --abbrev-ref HEAD)
    byme = !hub browse -- issues/created_by/$(git config user.username) && hub browse -- pulls/$(git config user.username)
    see = !hub browse -- pull/$(git symbolic-ref --short HEAD)
[difftool "sourcetree"]
    cmd = opendiff \"$LOCAL\" \"$REMOTE\"
    path = 
[mergetool "sourcetree"]
    cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
    trustExitCode = true
[merge "mergepbx"]
    name = Xcode project files merger
    driver = mergepbx %O %A %B
[user]
    username = dex1t
    name = dex1t
    email = dex1t@degoo.org
[filter "media"]
    clean = git media clean %f
    smudge = git media smudge %f
    required = true
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[secrets]
	providers = git secrets --aws-provider
	patterns = [A-Z0-9]{20}
	patterns = (\"|')?(AWS|aws|Aws)?_?(SECRET|secret|Secret)?_?(ACCESS|access|Access)?_?(KEY|key|Key)(\"|')?\\s*(:|=>|=)\\s*(\"|')?[A-Za-z0-9/\\+=]{40}(\"|')?
	patterns = (\"|')?(AWS|aws|Aws)?_?(ACCOUNT|account|Account)_?(ID|id|Id)?(\"|')?\\s*(:|=>|=)\\s*(\"|')?[0-9]{4}\\-?[0-9]{4}\\-?[0-9]{4}(\"|')?
	allowed = AKIAIOSFODNN7EXAMPLE
	allowed = wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
[init]
	templatedir = ~/.git-templates/git-secrets
